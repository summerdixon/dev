---
import "../styles/global.css";
import MuiRoot from "../components/MuiRoot.tsx";
import NavBar from "../components/NavBar.tsx";
import AnimationToggle from "../components/AnimationToggle";
import Hero from "../components/Hero.tsx";
import Introduction from "../components/Introduction.tsx";
import Skills from "../components/Skills.tsx";
import Footer from "../components/Footer.tsx";
const title = "summerdixon";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
	<style is:inline>
		#app-preloader{
			position:fixed; inset:0; z-index:2147483647;
			display:grid; place-items:center;
			background: white;
			transition: opacity .2s ease;
		}
		#app-preloader.hidden{ opacity:0; pointer-events:none; }
		.preloader-dot{
			width:10px; height:10px; border-radius:50%;
			background: var(--color-blue-secondary, #4361C3);
			animation: preloader-bounce .8s infinite alternate;
		}
		@keyframes preloader-bounce{ to{ transform: translateY(-6px); } }
	</style>
	  <script is:inline>
		(function () {
		  function done(){
			var el = document.getElementById('app-preloader');
			if (!el) return;
			el.classList.add('hidden');
			setTimeout(() => el.remove(), 220);
		  }
		  function check(){
			if (document.querySelector('style[data-emotion^="mui"]')) { done(); return true; }
			return false;
		  }
		  if (!check()){
			window.addEventListener('load', () => { if (!check()) done(); }, { once:true });
			setTimeout(() => { if (!check()) done(); }, 1200);
			window.addEventListener('app:styled', done, { once:true });
		  }
		})();
	</script>
	<link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} type="image/svg+xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="site">
	<div id="app-preloader" aria-hidden="true">
    	<div class="preloader-dot"></div>
  	</div>
    <main>
      <MuiRoot client:load>
        <NavBar/>
        <AnimationToggle client:load/>
        <Hero/>
        <Introduction/>
        <Skills/>
        <Footer/>
      </MuiRoot>
    </main>
  </body>
</html>
