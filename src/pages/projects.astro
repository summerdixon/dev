---
import MuiRoot from "../components/MuiRoot.tsx";
import NavBar from "../components/NavBar.tsx";
import AnimationToggle from "../components/AnimationToggle.tsx";
import ProjectCards from "../components/ProjectCards.tsx";
import Footer from "../components/Footer.tsx";
const title = "summer.dev";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="stylesheet" href="src/styles/global.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="site">
    <main>
      <MuiRoot client:load>
		<NavBar/>
        <AnimationToggle client:load/>
        <ProjectCards/>
        <Footer/>
      </MuiRoot>
    </main>
  </body>
</html>